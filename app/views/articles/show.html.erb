<div class="container mt-4 mx-5">
  <div class="d-flex align-items-center justify-content-between">
    <h1 class="text-primary fw-bold">
      <%= @article.title %>
    </h1>
    <div class="d-flex gap-3">
      <%= link_to edit_article_path(@article), class: "text-primary fs-4" do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to article_path(@article),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this article?" }, class: "text-primary fs-4" do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </div>
  <hr class="my-4">
  <div class="fs-5 text-dark">
    <%= simple_format(@article.content) %>
  </div>
  <div class="mt-4">
    <%= link_to "Back to Articles", articles_path, class: "btn btn-secondary" %>
  </div>
</div>
