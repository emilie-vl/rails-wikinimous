<%= form_with model: @article, class: "container my-5" do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter your article title" %>
  </div>
  <div class="mb-3">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, class: "form-control", rows: 4, placeholder: "Enter your article content" %>
  </div>
  <div class="text-end">
    <%= f.submit "Save article", class: "btn btn-primary" %>
  </div>
  <%= link_to "Back to articles", articles_path, class: "btn btn-secondary" %>
<% end %>
